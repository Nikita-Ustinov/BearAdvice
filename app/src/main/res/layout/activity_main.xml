<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_wood"
    android:backgroundTint="#26FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context="nikita.bearadvice.MainActivity"
    tools:targetApi="lollipop">


    <Button
        android:id="@+id/btnFood"
        android:layout_width="185dp"
        android:layout_height="144dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@mipmap/foot_1page"
        android:backgroundTintMode="src_over"
        android:onClick="onBtnFoodClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDrinks"
        android:layout_width="96dp"
        android:layout_height="148dp"
        android:layout_marginBottom="224dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@mipmap/drinks"
        android:onClick="onBtnDrinksClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="212dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="16dp"
        android:text="@string/welcome_text"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/drinks"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnDrinks"
        app:layout_constraintEnd_toStartOf="@+id/btnDrinks" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/foot"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnFood"
        app:layout_constraintTop_toTopOf="@+id/btnFood" />
</android.support.constraint.ConstraintLayout>
